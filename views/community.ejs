<%- include('partials/header_sidebar') %>

<div class="content-wrapper container mt-4">
    <h2 class="fw-bold text-center mb-2" style="font-family: 'Cinzel';">Community Hub</h2>
    <div class="row g-4 mt-3">
        <% const areas = ["D-Ground", "Kohinoor", "Peoples Colony", "Madina Town", "Satyana Road", "Canal Road"]; %>
        <% areas.forEach(area => { %>
            <div class="col-md-4 col-6">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <i class="bi bi-buildings-fill fs-1 text-gold mb-3"></i>
                    <h5 class="fw-bold"><%= area %></h5>
                    <a href="/area_chat?area=<%= encodeURIComponent(area) %>" class="btn btn-outline-dark rounded-pill btn-sm mt-2">Join Room</a>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<%- include('partials/footer') %>