<%- include('partials/header_sidebar') %>

<!-- AOS Animation Library -->
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<style>
    /* --- CUSTOM STYLES --- */
    
    /* Hero Section */
    .contact-hero {
        background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1497366216548-37526070297c?q=80&w=1920');
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
        height: 50vh;
        display: flex; align-items: center; justify-content: center;
        margin-top: -80px; position: relative;
    }

    /* Floating Contact Cards */
    .contact-card {
        background: white;
        padding: 40px 20px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        transition: all 0.4s ease;
        border-bottom: 4px solid transparent;
        height: 100%;
    }
    .contact-card:hover {
        transform: translateY(-15px);
        box-shadow: 0 20px 40px rgba(212, 175, 55, 0.2);
        border-bottom: 4px solid #D4AF37;
    }
    .icon-box {
        width: 70px; height: 70px;
        background: #1a1a1a;
        color: #D4AF37;
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        font-size: 1.8rem;
        margin: 0 auto 20px auto;
        transition: 0.4s;
    }
    .contact-card:hover .icon-box {
        background: #D4AF37; color: white;
        transform: rotate(360deg);
    }

    /* Modern Input Fields */
    .modern-input {
        border: none;
        border-bottom: 2px solid #eee;
        border-radius: 0;
        padding: 15px 0;
        background: transparent;
        transition: 0.3s;
    }
    .modern-input:focus {
        box-shadow: none;
        border-bottom: 2px solid #D4AF37;
        background: transparent;
    }

    /* Map Container */
    .map-container {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0,0,0,0.1);
        border: 5px solid white;
    }

    /* Gold Text Gradient */
    .text-gold-gradient {
        background: linear-gradient(45deg, #D4AF37, #F9D776);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Accordion Styling Fix */
    .accordion-button:not(.collapsed) {
        color: #D4AF37;
        background-color: #fff8e1;
        box-shadow: inset 0 -1px 0 rgba(0,0,0,.125);
    }
    .accordion-button:focus {
        box-shadow: none;
        border-color: rgba(0,0,0,.125);
    }
</style>

<!-- 1. HERO SECTION -->
<div class="contact-hero">
    <div class="container text-center text-white" data-aos="zoom-in" data-aos-duration="1000">
        <h5 class="text-uppercase ls-2 mb-3" style="letter-spacing: 4px; color: #D4AF37;">24/7 Support</h5>
        <h1 class="display-3 fw-bold mb-3" style="font-family: 'Cinzel';">Get in <span class="text-gold-gradient">Touch</span></h1>
        <p class="lead opacity-75" style="font-family: 'Poppins';">We'd love to hear from you. Here's how you can reach us.</p>
    </div>
</div>

<div class="content-wrapper">
    
    <!-- 2. CONTACT CARDS (Floating) -->
    <div class="container" style="margin-top: -50px; position: relative; z-index: 10;">
        <div class="row g-4">
            <!-- Phone -->
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="0">
                <div class="contact-card text-center">
                    <div class="icon-box"><i class="bi bi-telephone-fill"></i></div>
                    <h4 class="fw-bold mb-2">Talk to Sales</h4>
                    <p class="text-muted small mb-3">Interested in our hosting plans?</p>
                    <h5 class="fw-bold text-dark">+92 300 1234567</h5>
                </div>
            </div>
            <!-- Email -->
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="contact-card text-center">
                    <div class="icon-box"><i class="bi bi-envelope-open-fill"></i></div>
                    <h4 class="fw-bold mb-2">Customer Support</h4>
                    <p class="text-muted small mb-3">Need help with booking?</p>
                    <h5 class="fw-bold text-dark">support@hostelhub.pk</h5>
                </div>
            </div>
            <!-- Location -->
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="400">
                <div class="contact-card text-center">
                    <div class="icon-box"><i class="bi bi-geo-alt-fill"></i></div>
                    <h4 class="fw-bold mb-2">Visit HQ</h4>
                    <p class="text-muted small mb-3">Come say hello at our office.</p>
                    <h5 class="fw-bold text-dark">D-Ground, Faisalabad</h5>
                </div>
            </div>
        </div>
    </div>

    <!-- 3. MESSAGE FORM & MAP SPLIT -->
    <div class="container my-5 py-5">
        <div class="row g-5 align-items-center">
            
            <!-- Left: The Form -->
            <div class="col-lg-6" data-aos="fade-right">
                <h5 class="text-warning fw-bold text-uppercase">Message Us</h5>
                <h2 class="fw-bold display-5 mb-4" style="font-family: 'Cinzel';">Have a Question?</h2>
                <p class="text-muted mb-5">Fill out the form below and our team will get back to you within 24 hours.</p>
                
                <form action="/contact" method="POST">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="small fw-bold text-muted">Your Name</label>
                            <input type="text" name="name" class="form-control modern-input" placeholder="John Doe" required>
                        </div>
                        <div class="col-md-6">
                            <label class="small fw-bold text-muted">Email Address</label>
                            <input type="email" name="email" class="form-control modern-input" placeholder="name@example.com" required>
                        </div>
                        <div class="col-12 mt-4">
                            <label class="small fw-bold text-muted">Subject</label>
                            <input type="text" name="subject" class="form-control modern-input" placeholder="Inquiry about..." required>
                        </div>
                        <div class="col-12 mt-4">
                            <label class="small fw-bold text-muted">Message</label>
                            <textarea name="message" class="form-control modern-input" rows="4" placeholder="How can we help you?" required></textarea>
                        </div>
                        <div class="col-12 mt-5">
                            <button class="btn btn-dark rounded-pill px-5 py-3 fw-bold w-100 shadow-lg" style="border: 1px solid #D4AF37;">
                                Send Message <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Right: The Map -->
            <div class="col-lg-6" data-aos="fade-left">
                <div class="map-container h-100">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3404.7947925577423!2d73.0852697151036!3d31.419879981402965!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x392242a1d8422977%3A0x387f22a0c9227739!2sD%20Ground%20Faisalabad!5e0!3m2!1sen!2s!4v1623456789012!5m2!1sen!2s" 
                        width="100%" height="600" style="border:0; filter: grayscale(100%) invert(92%) contrast(83%);" allowfullscreen="" loading="lazy">
                    </iframe>
                </div>
            </div>

        </div>
    </div>

    <!-- 4. FAQ SECTION -->
    <div class="bg-light py-5">
        <div class="container" style="max-width: 800px;">
            <div class="text-center mb-5" data-aos="fade-up">
                <h2 class="fw-bold" style="font-family: 'Cinzel';">Frequently Asked Questions</h2>
                <p class="text-muted">Everything you need to know about HostelHub.</p>
            </div>
            
            <div class="accordion" id="faqAccordion">
                
                <!-- Q1 -->
                <div class="accordion-item border-0 mb-3 shadow-sm rounded overflow-hidden" data-aos="fade-up" data-aos-delay="0">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            How do I register my hostel?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body text-muted">
                            It is very simple! First, go to the <a href="/register" class="text-decoration-none fw-bold" style="color: #D4AF37;">Sign Up Page</a> and select "Owner". Once logged in, click "Add New Hostel".
                        </div>
                    </div>
                </div>

                <!-- Q2 -->
                <div class="accordion-item border-0 mb-3 shadow-sm rounded overflow-hidden" data-aos="fade-up" data-aos-delay="100">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            Is the service free for students?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body text-muted">
                            Yes! Searching, comparing, and contacting owners is 100% free. We also offer free <a href="/community" class="text-decoration-none fw-bold" style="color: #D4AF37;">Community Chat</a>.
                        </div>
                    </div>
                </div>

                <!-- Q3 -->
                <div class="accordion-item border-0 mb-3 shadow-sm rounded overflow-hidden" data-aos="fade-up" data-aos-delay="200">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            How secure are the payments?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body text-muted">
                            We facilitate direct owner-student payments. Upload your receipt in <a href="/my_bookings" class="text-decoration-none fw-bold" style="color: #D4AF37;">My Bookings</a> for verification.
                        </div>
                    </div>
                </div>

                <!-- Q4 -->
                <div class="accordion-item border-0 mb-3 shadow-sm rounded overflow-hidden" data-aos="fade-up" data-aos-delay="300">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                            How can I contact support?
                        </button>
                    </h2>
                    <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body text-muted">
                            Fill out the form above or email us at support@hostelhub.pk. We respond within 24 hours.
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

