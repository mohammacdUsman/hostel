<div id="ai-chat-widget" style="position: fixed; bottom: 30px; right: 30px; z-index: 10000;">
    <button onclick="toggleAIChat()" style="width: 60px; height: 60px; border-radius: 50%; background: linear-gradient(135deg, #D4AF37, #1a1a1a); color: white; border: none; font-size: 28px; box-shadow: 0 5px 20px rgba(0,0,0,0.3); cursor: pointer;">
        <i class="bi bi-robot"></i>
    </button>

    <div id="ai-chat-window" style="display: none; position: absolute; bottom: 80px; right: 0; width: 320px; height: 450px; background: white; border-radius: 15px; box-shadow: 0 10px 40px rgba(0,0,0,0.2); overflow: hidden; flex-direction: column; border: 1px solid #eee;">
        <div style="background: #1a1a1a; color: #D4AF37; padding: 15px; display: flex; justify-content: space-between; font-family: 'Cinzel'; font-weight: bold;">
            <span>HostelHub AI</span>
            <button onclick="toggleAIChat()" class="btn-close btn-close-white"></button>
        </div>
        
        <div id="ai-messages" style="flex: 1; padding: 15px; overflow-y: auto; background: #f9f9f9; display: flex; flex-direction: column; gap: 10px;">
            <div style="padding: 10px 15px; border-radius: 15px; max-width: 80%; font-size: 13px; background: #fff; border: 1px solid #eee; align-self: flex-start;">
                Hello! How can I help you find a hostel today?
            </div>
        </div>

        <div style="padding: 10px; background: white; border-top: 1px solid #eee; display: flex; gap: 10px;">
            <input type="text" id="ai-input" placeholder="Ask something..." style="flex: 1; padding: 8px 15px; border-radius: 20px; border: 1px solid #ddd; outline: none;">
            <button onclick="sendAIMessage()" style="background: #1a1a1a; color: #D4AF37; border: none; width: 40px; height: 40px; border-radius: 50%;"><i class="bi bi-send-fill"></i></button>
        </div>
    </div>
</div>

<script>
    function toggleAIChat() {
        const win = document.getElementById('ai-chat-window');
        win.style.display = (win.style.display === 'none') ? 'flex' : 'none';
    }

    function sendAIMessage() {
        const input = document.getElementById('ai-input');
        const msg = input.value.trim();
        if (!msg) return;

        const chatBox = document.getElementById('ai-messages');
        chatBox.innerHTML += `<div style="padding: 10px 15px; border-radius: 15px; max-width: 80%; font-size: 13px; background: #D4AF37; color: white; align-self: flex-end;">${msg}</div>`;
        input.value = "";
        chatBox.scrollTop = chatBox.scrollHeight;

        fetch('/api_ai', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ message: msg })
        })
        .then(response => response.text())
        .then(data => {
            chatBox.innerHTML += `<div style="padding: 10px 15px; border-radius: 15px; max-width: 80%; font-size: 13px; background: #fff; border: 1px solid #eee; align-self: flex-start;">${data}</div>`;
            chatBox.scrollTop = chatBox.scrollHeight;
        });
    }
</script>
